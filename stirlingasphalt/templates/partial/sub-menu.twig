<ul class="flex flex-col gap-4 h-fit absolute bottom-0 left-0 w-[150%] bg-cream z-10 rounded-b-md text-black translate-y-full p-4 opacity-0 pointer-events-none group-hover:opacity-100 group-hover:pointer-events-auto transition-opacity duration-200">
	{% for item in items %}
		<li>
			<a href="{{ item.url }}" target="{{ item.target }}" class="no-underline hover:underline">{{ item.title }}</a>
		</li>
	{% endfor %}
</ul>
