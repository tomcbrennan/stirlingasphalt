<header class="transition-all duration-300 relative w-screen top-0 left-0 bg-white z-50 pt-4">
	<div data-navigation class="z-20 w-full flex flex-col gap-4 transition-all duration-300">
		<div class="container grid md:grid-cols-2">
			<a href="{{ site.url }}" rel="home">{% include "partial/image.twig" with { image: '/wp-content/uploads/2023/11/stirling-asphalt-logo.jpeg', alt: 'Stirling Asphalt', class: "w-full max-sm:mx-auto max-sm:w-full sm:max-md:w-2/3 max-lg:w-[90%]"  } %}</a>
			<div class="flex flex-col justify-between max-md:hidden">
				<div class="flex items-center justify-end">
					<a href="/quick-quotes" class="button">Quick Quotes</a>
				</div>
				<div class="flex items-center gap-6 justify-end font-heading">
					<a href="tel:{{ options.phone }}" class="text-[2.5rem] lg:text-6xl text-brand">{{ options.phone }}</a>
					<span class="h-5 w-5 rounded-full flex items-center justify-center text-brand bg-black text-xs">Or</span>
					<a href="mailto:{{ options.email }}" class="flex flex-col items-center gap-1">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24"><path d="M0 3v18h24v-18h-24zm6.623 7.929l-4.623 5.712v-9.458l4.623 3.746zm-4.141-5.929h19.035l-9.517 7.713-9.518-7.713zm5.694 7.188l3.824 3.099 3.83-3.104 5.612 6.817h-18.779l5.513-6.812zm9.208-1.264l4.616-3.741v9.348l-4.616-5.607z"/></svg>
						<span class="text-lg">{{ options.email }}</span>
					</a>
				</div>
			</div>
		</div>
		<div class="bg-black">
			<div class="container">
				<nav id="nav-main" role="navigation">
					{% include 'menu.twig' with {
				items: menu.get_items
			} %}
				</nav>
			</div>
		</div>
	</div>
</header>
